<div id="form" class="authform">
  <div class="row">
    <form class="form" method="POST" action="/farmers/<%= farmer._id %>?_method=PUT">
      <div id="sign_up" class="row">
        <h4>PLEASE NOTE: All fields are required. You can edit your information at any time.</h4>
        <div class="col-md-2">
          <h3>INFORMATION</h3>
          <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control well" type="text" name="name" id="name"
                   value="<%= farmer.name %>"required autofocus>
          </div>

          <div class="form-group">
            <label for="farm_name">Farm Name:</label>
            <input class="form-control" type="text" name="farm_name" id="farm_name"
                   value="<%= farmer.farm_name %>" required>
          </div>

         <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control" type="email" name="email" id="email"
                   value="<%= farmer.local.email %>" placeholder="example@domain.com" required>
          </div>

          <div class="form-group">
            <label for="farm_name">Phone Number:</label>
            <input class="form-control" type="tel" name="phone" id="phone"
                   value="<%= farmer.phone %>" pattern="^\d{3}-\d{3}-\d{4}$"
                   placeholder="XXX-XXX-XXXX" required>
          </div>

            <div class="form-group">
              <label for="bio">Short Summary:</label>
              <textarea class="form-control summary" maxlength="250" type="input" rows="4"
                        name="bio" id="bio" value="<%= farmer.bio %>"
                        placeholder="Tell us something about your farm or history
                        (250 character limit)"><%= farmer.bio %></textarea>
            </div>
        </div>

        <div class="col-md-2">
          <div class="form-group">
          <h3>ADDRESS</h3>
            <label for="street">Street:</label>
            <input class="form-control" type="text" name="street" id="street"
                   value="<%= farmer.address.street %>" required>
          </div>

          <div class="form-group">
            <label for="city">city:</label>
            <input class="form-control" type="text" name="city" id="city"
                   value="<%= farmer.address.city %>" required>
          </div>

          <div class="row">
            <div class="col-sm-9">
              <div class="form-group">
                <label for="state">State:</label>
                <input class="form-control" type="text" name="state" id="state"
                       value="<%= farmer.address.state %>" required>
              </div>
            </div>
            <div class="col-sm-8">
              <div class="form-group">
                <label for="zipcode">Zipcode:</label>
                <input class="form-control" type="text" pattern="\d{5,5}?"
                       title="Zipcode must be five digits. Numbers only" name="zipcode" id="zipcode"
                       value="<%= farmer.address.zipcode %>" required>
              </div>
            </div>
          </div>
        </div>


        <div class = "col-lg-8">
          <h2>TELL US ABOUT YOUR FARMING STANDARDS</h2>
          <div class="center-st">
            <% standards.forEach(function(s) { %>
              <div class="col-xs-2 center-list">
                <label for="<%= s.name %>">
                <input type="checkbox"
                       name='standards'
                       value="<%= s.name %>"
                       id="<%= s.name %>" <%= farmer.getCheckedStnd(s.name) %> >
                <%= s.label %>
                </label>
              </div>
            <% }) %>
          </div>
        </div>

        <div class = "col-md-8">
          <h2>TELL US WHAT YOU'RE GROWING</h2>
          <div class="row">
            <div class = "col-md-6">
              <h4><b>PRODUCE</b></h4>
              <hr>
              <% allProducts.produce.forEach(function(product) { %>
                <div class="form-group col-sm-3">
                  <label for="<%= product.name %>">
                  <%= product.label %>
                  <input class="form-control"
                         type="checkbox"
                         name='products'
                         value="<%= product.name %>"
                         id="<%= product.name %>" <%= farmer.getChecked(product.name) %> >
                  </label>
                </div>
              <% }) %>
            </div>
            <div class = "col-md-4">
              <h4><b>MEAT</b></h4>
              <hr>
              <% allProducts.meats.forEach(function(product) { %>
                <div class="form-group col-sm-4">
                  <%= product.label %>
                  <input class="form-control"
                         type="checkbox"
                         name='products'
                         value="<%= product.name %>"
                         id="<%= product.name %>" <%= farmer.getChecked(product.name) %> >
                </div>
              <% }) %>
            </div>
            <div class = "col-md-2">
              <h4><b>OTHER</b></h4>
              <hr>
              <% allProducts.otherProducts.forEach(function(product) { %>
                <div class="form-group col-sm-8">
                  <label for="<%= product.name %>">
                  <%= product.label %>
                  <input class="form-control"
                         type="checkbox"
                         name='products'
                         value="<%= product.name %>"
                         id="<%= product.name %>" <%= farmer.getChecked(product.name) %> >
                  </label>
                </div>
              <% }) %>
            </div>
          </div>
          <div class="row">
            <div class= "col-md-4 col-md-offset-3">
              <button type="submit" class="btn btn-success btn-lg btn-search">SAVE</button>
            </div>
            <br>
            <div class = "col-md-4 col-sm-offset-1   text-right">
              <a href="/farmers/<%= farmer._id %>"><p>Go back</p></a>
            </div>

          </div>
        </div>
      </div>
    </form>

    <form method="POST" action="/farmers/<%= farmer._id %>?_method=DELETE">
      <div>
        <button type="delete" class="btn btn-md btn-danger">Want to delete your account?</button>
      </div>
    </form>
  </div>
</div>



