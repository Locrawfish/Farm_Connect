<section>
  <div class= "container title">
   <h1><%= title %></h1>
    <hr>
    <h5> "We pick it, you click it!" </h5>
    <div class="row">
      <div class="col-lg-12">
        <div class="float-img "><img src="../images/green-leaves-icon.png"></div>
        <div class="col-lg-6">
          <div class="equal-height left-section box-shadow--4dp">
            <h2>WHY BUY LOCAL?</h2>
            <p>Local food supports local families, builds community, keeps taxes down, and benefits
            the environment and wildlife. It's an investment in the future.
            </p>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="equal-height right-section box-shadow--4dp">
            <h2 class="heart">ARE YOU A FARMER?</h2>
            <p>With Farm Connect, consumers come to you! Broaden your customer base by signing up with us.
            Connect with your consumers.
            </p>
          </div>
        </div>
       <!--  <div class="title col-lg-6 col-lg-offset-3"></div>
        <div class="col-lg-6">  <img class= "boxes" src="./images/BAN.png">  </div>
        <div class="col-lg-6">  <img class= "boxes2" src="./images/BAN2.png">  </div> -->
      </div>
    </div>
    <div class = "chevron col-lg-2 col-lg-offset-5">
      <a href = "#search"><i class="fa fa-chevron-down fa-5x"></i></a>
    </div>
  </div>
</section>

<div id="search" class = "wrapper">
  <div class = "row">
    <div class = "search-info col-lg-6 col-lg-offset-3">
      <h2>Tell us what you're looking for.</h2>
      <h4>Select one or more options to find farmers near you!</h4>
    </div>
  </div>

  <div class ="search-info row">
    <hr>
    <div class="row">
      <div class = "search-title">
        <h3><b>AVAILABLE PRODUCTS</b></h3>
      </div>
    </div>
    <div class="col-lg-12">
      <!-- PRODUCT LIST -->
      <div class="search-details row">
        <form class="form" method="POST" action="/search %>">
          <div class="row search-list">
            <div class="col-md-5">
              <!-- PRODUCE SECTION -->
              <h3>Produce</h3>
              <% allProducts.produce.forEach(function(product) { %>
                <div class="col-xs-4">
                  <input type="checkbox"
                         name="products"
                         value="<%= product.name %>"
                         id="<%= product.name %>" >
                  <label for="<%= product.name %>"><%= product.label %></label><br />
                  </div>
              <% }) %>
            </div>

            <div class="col-lg-3">
              <!-- MEATS SECTION -->
              <h3>Meats</h3>
              <% allProducts.meats.forEach(function(product) { %>
                <div class="col-xs-5">
                  <input type="checkbox"
                         name="products"
                         value="<%= product.name %>"
                         id="<%= product.name %>" >
                  <label for="<%= product.name %>"><%= product.label %></label><br />
                </div>
              <% }) %>
            </div>

            <div class="col-lg-2">
              <h3>Other</h3>
              <!-- OTHER SECTION -->
              <% allProducts.otherProducts.forEach(function(product) { %>
                <div class="col-xs-7">
                  <input type="checkbox"
                         name="products"
                         value="<%= product.name %>"
                         id="<%= product.name %>" >
                  <label for="<%= product.name %>"><%= product.label %></label><br />
                </div>
              <% }) %>
            </div>
          </div>
          <br />
          <div class="row">
            <h4>Farming Standards</h4>
            <div class="col-lg-10 pull-right">
              <% standards.forEach(function(s) { %>
                <div class="col-xs-2 center-list">
                  <label for="<%= s.name %>">
                  <input type="checkbox"
                         name='standards'
                         value="<%= s.name %>"
                         id="<%= s.name %>" %> >
                  <%= s.label %>
                  </label>
                </div>
              <% }) %>
            </div>
          </div>
          <br />
          <br />
          <div class="row">
            <div class="text-center">
              <button class="btn btn-info btn-lg btn-search" type="submit">Find a Farmer!</button>
            </div>
          </div>
        </form>
      </div>
      <!-- END OF PRODUCTS ROW -->
    </div>
  </div>
</div>
<!-- END OF SECOND PART OF MAIN PAIGE -->



